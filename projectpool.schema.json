{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/uss-stargazer/jobqueue/projectpool.shema.json",
  "title": "Project Pool",
  "description": "Root object for pool of projects.",
  "type": "object",
  "properties": {
    "pool": {
      "description": "List of projects, works in progress or just ideas.",
      "type": "array",
      "items": {
        "description": "A project entry.",
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the project.",
            "type": "string"
          },
          "description": {
            "description": "Description of the project.",
            "type": "string"
          },
          "repo": {
            "description": "URL to project repository.",
            "type": "string",
            "format": "uri"
          },
          "status": {
            "description": "Project status (active: they are referenced in jobqueue.json, inactive: they aren't referenced anywhere and aren't done, complete: they're done)",
            "type": "string",
            "enum": ["active", "inactive", "complete"]
          }
        }
      }
    }
  }
}
