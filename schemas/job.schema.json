{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/uss-stargazer/jobqueue/refs/heads/main/schemas/job.schema.json",
  "description": "A job entry for JobQueue.",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the job.",
      "type": "string"
    },
    "objectives": {
      "description": "A list of objectives to complete for this job.",
      "type": "array",
      "items": {
        "description": "A job objective.",
        "type": "string"
      }
    },
    "updates": {
      "description": "Put any updates to the job while working here.",
      "type": "string"
    },
    "project": {
      "description": "Corresponding project in projectpool.json.",
      "type": "string"
    }
  }
}
