{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/uss-stargazer/jobqueue/jobqueue.shema.json",
  "title": "Job Queue",
  "description": "Root object for jobs/tasks FIFO queue model.",
  "type": "object",
  "properties": {
    "queue": {
      "description": "The job queue.",
      "type": "array",
      "items": {
        "description": "A job entry.",
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the job.",
            "type": "string"
          },
          "objectives": {
            "description": "A list of objectives to complete for this job.",
            "type": "array",
            "items": {
              "description": "A job objective.",
              "type": "string"
            }
          },
          "updates": {
            "description": "Put any updates to the job while working here.",
            "type": "string"
          },
          "project": {
            "description": "Corresponding project in projectpool.json.",
            "type": "string"
          }
        }
      }
    }
  }
}
